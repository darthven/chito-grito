{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es7",
      "es2016",
      "es2017.object"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*", "src/test/*.test.ts"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}